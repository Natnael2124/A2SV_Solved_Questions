class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        num=set(nums)
        maxvalue=1

        for i in num:
            if i-1 not in num:
                count=1
                while i+1 in num:
                    count+=1
                    i+=1
                maxvalue=(max(maxvalue,count))

        return maxvalue









